{% extends "mainLayout.html.twig" %}
{% block content %}
	<div class="box_container">
		{% if session['user']['role'] == 100 %}
			<a href="{{ url_for('/box/create') }}" class="btn-create">Cr√©er une nouvelle box</a>
		{% endif %}
		<div class="box-list">
			{% for box in boxes %}
					<a href="{{ url_for('/detailBoxPredefinie') }}?id={{ box.id }}">
						<div class="box-item">
							<div class="box-details">
								<h2>{{ box.libelle }}</h2>
								<p>{{ box.description }}</p>
							</div>
						</div>
					</a>
			{% endfor %}
		</div>
	</div>
{% endblock %}
