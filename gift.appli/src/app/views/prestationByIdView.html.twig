{% extends "mainLayout.html.twig" %}
{% block content %}

	<div class="container">
		<img src="{{ base_path() }}/{{ img }}/{{ prestation.img }}" alt="" class="prestation-img">
		<div class="right-side">
			<h1>{{ prestation.libelle }}</h1>
			<p class="price">{{ prestation.tarif }} €</p>
			<h2>Détails sur la prestation</h2>
			<p>{{ prestation.description }}</p>
			
			{% if prestation.unite is not empty %}
				<h2 id="unite">Unité</h2>
            	<p>{{ prestation.unite }}</p>
        	{% endif %}
			
			<form action="{{ url_for('/box/addPrestation') }}" method="post">
            	<input type="hidden" name="csrf" value="{{ csrf }}">
				<input type="hidden" name="prestation_id" value="{{ prestation.id }}">
				<input type="hidden" name="csrf" value="{{ csrf }}">
				<button type="submit">Ajouter à ma box</button>
			</form>
		</div>
	</div>

{% endblock %}
