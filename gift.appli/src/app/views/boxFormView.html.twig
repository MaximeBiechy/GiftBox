{% extends "mainLayout.html.twig" %}
{% block content %}
    <div class="form-container">
        <h1>Création d'une box</h1>
        <form action="{{ url_for('/box/created') }}" method="post">
            <div class="form-group">
                <label for="libelle">Nom du coffret</label>
                <input type="text" name="libelle" id="libelle" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="description">Description du coffret</label>
                <textarea name="description" id="description" class="form-control" rows="2" required></textarea>
            </div>
            <div class="form-group">
                <label for="cadeau" class="form-label-inline">Cadeau ?</label>
                <input type="checkbox" name="cadeau" id="cadeau" class="form-control-inline">
            </div>
            <div class="form-group hide" id="message_cadeau_group">
                <label for="message_kdo">Message pour le cadeau</label>
                <input type="text" name="message_kdo" id="message_kdo" class="form-control">
            </div>
            <input type="hidden" name="csrf" value="{{ csrf }}">
            <button type="submit" class="btn-submit">Créer</button>
        </form>
    </div>
{% endblock %}